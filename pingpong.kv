<MainPage>:

    txtInHint_Email: "Email"
    txtInHint_Password: "Password"
    txtInHint_Keyword: "Keyword"

    # main page color, rectangle for full size of the window:
    canvas.before:
        Color:
            rgba: 174, 174, 192, 0.4
        Rectangle:
            pos: self.pos
            size: self.size

    # creating global variables:
    email: email
    password: password
    keyword: keyword
    filechooser: filechooser

    # email text-input form:
    TextInput:
        id: email

        font_size: 18
        center_x: root.width * 2/4
        top: root.top - 50
        multiline: False
        height: 35
        hint_text: root.txtInHint_Email
        hint_text_color: 0, 0, 0, 1

    # password text-input form:
    TextInput:
        id: password

        font_size: 18
        center_x: root.width * 2/4
        top: root.top - 90
        multiline: False
        height: 35
        hint_text: root.txtInHint_Password
        hint_text_color: 0, 0, 0, 1

    # keyword text-input password form:
    TextInput:
        id: keyword

        font_size: 18
        center_x: root.width * 2/4
        top: root.top - 130
        multiline: False
        height: 35
        hint_text: root.txtInHint_Keyword
        hint_text_color: 0, 0, 0, 1

    # search button:
    Button:
        # root allows us to reference all the methods inside the class:
        on_press: root.btn()

        center_x: root.width * 2/4
        top: root.top - 170
        height: 35

    # filechooser widget
    FileChooserListView:
        id: filechooser

        center_x: root.width * 2/4
        top: root.top - 250
        size: 400, 400


<SearchButton>:
    source: "pressed.png"
    size: 100, 100

